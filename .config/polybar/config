[colors]

fg = ${xrdb:color7}
modfg = ${xrdb:color1}
bg = ${xrdb:color0}

white = #d1d1d1
gray = #585858
black = #ce1d1d1d
red = #c795ae
blue = #95aec7
yellow = #c7ae95
green = #aec795

[global/wm]
margin-top    = 25
margin-bottom = 25

[bar/laptop]
monitor    = eDP-1
width      = 100%
height     = 26
#offset-x   = 0%
#offset-y   = 0%
locale     = en_US.UTF-8
background = ${colors.bg}
foreground = ${colors.fg}

font-0              = SFNS:size=10:fontformat=truetype
font-1              = FontAwesome:size=11;0

modules-left        = i3 xwindow
modules-center      = mpd
modules-right       = lbacklight volume filesystem battery date
tray-position       = right
tray-padding        = 0
tray-transparent    = false

underline-size      = 0

spacing             = 2
padding-left        = 0
padding-right       = 2
module-margin-left  = 2
module-margin-right = 2

[module/xwindow]
type              = internal/xwindow
label             = %title:0:50:...%


[module/i3]
type                       = internal/i3
strip-wsnumbers            = false

ws-icon-0                  = 1
ws-icon-1                  = 2
ws-icon-2                  = 3
ws-icon-3                  = 4
ws-icon-4                  = 5
format                     = <label-state> <label-mode>
;label-mode-foreground      = ${colors.fg}
label-mode-background      = ${colors.bg}
label-mode-padding         = 1
label-focused-foreground   = ${colors.bg}
label-focused-background   = ${colors.modfg}
label-focused-padding      = 3
;label-unfocused-background = ${colors.fg}
;label-unfocused-foreground = ${colors.fg}

label-unfocused-padding    = 1

label-urgent-foreground    = ${colors.bg}
label-urgent-background    = ${colors.blue}
label-urgent-padding       = 1
label-visible-padding      = 1

[module/date]
type              = internal/date
interval          = 1
time              = %H:%M
time-alt          =   %A, %d %B
format            = <label>
label             = %time%

[module/battery]
type                         = internal/battery
battery                      = BAT0
adapter                      = AC
full-at                      = 100

time-format = %H:%M

format-charging              = <animation-charging> <label-charging>
label-charging               = %percentage%% (%time%)

format-discharging           = <ramp-capacity> <label-discharging>
label-discharging            = %percentage%% (%time%)

format-full-prefix           = "  "

format-padding               = 1

ramp-capacity-0              = 
ramp-capacity-1              = 
ramp-capacity-2              = 
ramp-capacity-3              = 
ramp-capacity-4              = 

animation-charging-0         = 
animation-charging-1         = 
animation-charging-2         = 
animation-charging-3         = 
animation-charging-4         = 
animation-charging-framerate = 750

[module/volume]
type = internal/volume

; Soundcard to be used
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

; Name of the master mixer
; Default: Master
master-mixer = Master

; Optionally define speaker and headphone mixers
; Use the following command to list available mixer controls:
; $ amixer scontrols | sed -nr "s/.*'([[:alnum:]]+)'.*/\1/p"
; Default: none
; speaker-mixer = Speaker
; Default: none
; headphone-mixer = Headphone

; NOTE: This is required if headphone_mixer is defined
; Use the following command to list available device controls
; $ amixer controls | sed -r "/CARD/\!d; s/.*=([0-9]+).*name='([^']+)'.*/printf '%3.0f: %s\n' '\1' '\2'/e" | sort
; Default: none
; headphone-id = 9

; Use volume mapping (similar to amixer -M and alsamixer), where the increase in volume is linear to the ear
; Default: false
mapped = true

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted =  Muted
label-muted-foreground = #66

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

; If defined, it will replace <ramp-volume> when
; headphones are plugged in to `headphone_control_numid`
; If undefined, <ramp-volume> will be used for both
; Only applies if <ramp-volume> is used
; ramp-headphones-0 = 
; ramp-headphones-1 = 

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /home

; Seconds to sleep between updates
; Default: 30
interval = 5

; Display fixed precision values
; Default: false
fixed-values = true

format-mounted = <label-mounted>
label-mounted =   %free%

[module/lbacklight]
type = custom/script
interval = 0.1
label =   %output%%
exec = ~/.config/polybar/lbacklight.sh

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 1

format-online = <label-song> <bar-progress> <label-time>

label-song = %artist% - %title%

label-offline = mpd is offline

icon-play = 
icon-pause = 
icon-prev = 
icon-next = 
icon-seekb = 
icon-seekf = 

bar-progress-width = 20
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
